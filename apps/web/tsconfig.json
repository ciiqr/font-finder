{
    "extends": "@pentible/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "sourceMap": true,
        "declarationMap": true,
        // next requirements
        "resolveJsonModule": true,
        "jsx": "preserve",
        // NOTE: next adds automatically, but these aren't required
        "noEmit": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "incremental": true,
        "module": "esnext"
    },
    // NOTE: next adds automatically, but these aren't required
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
